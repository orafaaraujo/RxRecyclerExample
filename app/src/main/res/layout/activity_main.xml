<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".presentation.main.presentation.activities.MainActivity">

    <Button
        android:id="@+id/main_button_linear_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="?android:selectableItemBackground"
        android:onClick="linearVertical"
        android:text="@string/main_button_linear_vertical"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/main_button_linear_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="?android:selectableItemBackground"
        android:onClick="horizontalVertical"
        android:text="@string/main_button_linear_horizontal"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/main_button_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="?android:selectableItemBackground"
        android:onClick="grid"
        android:text="@string/main_button_grid"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/main_button_staggered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="?android:selectableItemBackground"
        android:onClick="staggredGrid"
        android:text="@string/main_button_staggered"
        android:textColor="@color/colorAccent"/>

</LinearLayout>
